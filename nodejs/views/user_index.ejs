    <script>
      let safi = {
        x: "32.29740462539648",
        y: "-9.233969451787024",
      };
      let agadir = {
        x: "30.424250302361035",
        y: "-9.59191950518671",
      };
      let tanger = {
        x: "35.774346561838954",
        y: "-5.786970071038289",
      };
      let casablanca = {
        x: "33.56423913535208",
        y: "-7.66089451123138",
      };

      let map = document.getElementById("map");
      map.src = `https://yassinaibi.github.io/gestion-de-formation-map/index.html?X=${safi.x}&Y=${safi.y}`;

      function ville(thisCity, city) {
        document.getElementById(thisCity).onclick = function () {
          map.src = `https://yassinaibi.github.io/gestion-de-formation-map/index.html?X=${city.x}&Y=${city.y}`;
        };
      }
      ville("safi", safi);
      ville("agadir", agadir);
      ville("tanger", tanger);
      ville("casablanca", casablanca);
    </script>
